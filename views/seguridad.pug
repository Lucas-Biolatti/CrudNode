doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Polimetal S.A
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
        link(rel="stylesheet", href="style.css")
        link(href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet')
    body 
        div(class="container" style="padding: 20px;")
            a(href="/") 
                div(style="text-align: center;")
                    img(src="./images/logo.jpg" alt="logo" class="img-fluid")
        
            div(style="text-align: center;")
                h2 Elija un sector 
            div(class="table-responsive")
                table(class="table table-striped table-hover")
                    thead 
                        th Id 
                        th Sector
                        th Accidente/ Incidente
                        th Condicion insegura
                    tbody 
                        each i in sector
                            tr 
                                td= i.idSector
                                td= i.Descripcion
                               
                                td 
                                    a(href="accident?id="+i.idSector)
                                        button(class="button btn-danger") Nuevo Accidente
                                  
                                td 
                                    a(href="actosInseguros?id="+i.idSector)
                                        button(class="button btn-warning") Acto/Condicion Insegura  
                                    
                      
                              
            br
            hr
            h2 Listados
            
            a(href="listAccident")
                div(class="d-grid gap-2") 
                    button(type="button", class="button btn-danger") ACCIDENTES/INCIDENTES
            br  
            a(href="listActos")
                div(class="d-grid gap-2") 
                    button(type="button", class="button btn-warning") ACTOS/CONDICIONES INSEGURAS  
           
                                           
        footer 
            br 
            div(class="col-12")
                h6 &copy Copyright 2021 | Polimetal S.A                                